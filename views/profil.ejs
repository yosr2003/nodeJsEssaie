<h1 class="p-relative">Profile</h1>
<div class="profile-page m-20">
  <!-- Start Overview -->
  <div class="overview bg-white rad-10 d-flex align-center">
    <!-- Avatar Section -->
    <div class="avatar-box txt-c p-20">
      <img class="rad-half mb-10" src="/images/avatar.png" alt="Avatar" />
      <h3 class="m-0"><%= found.nom %> <%= found.prenom %></h3>
      <p class="c-grey mt-10">Level 20</p>
      <div class="level rad-6 bg-eee p-relative">
        <span style="width: 70%;"></span>
      </div>
      <div class="rating mt-10 mb-10">
        <i class="fa-solid fa-star c-orange fs-13"></i>
        <i class="fa-solid fa-star c-orange fs-13"></i>
        <i class="fa-solid fa-star c-orange fs-13"></i>
        <i class="fa-solid fa-star c-orange fs-13"></i>
        <i class="fa-solid fa-star c-orange fs-13"></i>
      </div>
      <p class="c-grey m-0 fs-13">550 Rating</p>
    </div>

    <!-- Info Section -->
    <div class="info-box w-full txt-c-mobile">
      <!-- Form Start -->
      <form  id="profileForm" action="/profil/<%= found.cin %>/update" method="POST">
        <!-- Informations Générales -->
        <div class="box p-20 d-flex align-center" style="gap: 15px; align-items: center; flex-wrap: wrap;">
          <h4 class="c-grey fs-15 m-0" style="flex-basis: 100%; margin-bottom: 10px;">Informations Générales</h4>

          <div class="fs-14 d-flex align-center" style="gap: 5px; flex: 1;">
            <label for="nom" class="c-grey" style="min-width: 80px;">Nom:</label>
            <input type="text" id="nom" name="nom" value="<%= found.nom %>" disabled style="flex: 1; padding: 5px; border: 1px solid #ccc; border-radius: 4px;" />
          </div>

          <div class="fs-14 d-flex align-center" style="gap: 5px; flex: 1;">
            <label for="prenom" class="c-grey" style="min-width: 80px;">Prénom:</label>
            <input type="text" id="prenom" name="prenom" value="<%= found.prenom %>" disabled style="flex: 1; padding: 5px; border: 1px solid #ccc; border-radius: 4px;" />
          </div>

          <div class="fs-14 d-flex align-center" style="gap: 5px; flex: 1;">
            <label for="cin" class="c-grey" style="min-width: 80px;">CIN:</label>
            <input type="text" id="cin" name="cin" value="<%= found.cin %>" readonly  disabled style="flex: 1; padding: 5px; border: 1px solid #ccc; border-radius: 4px;" />
          </div>
        </div>

        <!-- Informations Personnelles -->
        <div class="box p-20 d-flex align-center" style="gap: 15px; align-items: center; flex-wrap: wrap;">
          <h4 class="c-grey fs-15 m-0" style="flex-basis: 100%; margin-bottom: 10px;">Informations Personnelles</h4>

          <div class="fs-14 d-flex align-center" style="gap: 5px; flex: 1;">
            <label for="email" class="c-grey" style="min-width: 80px;">Email:</label>
            <input type="email" id="email" name="email" value="<%= found.email %>" disabled style="flex: 1; padding: 5px; border: 1px solid #ccc; border-radius: 4px;" />
          </div>

          <div class="fs-14 d-flex align-center" style="gap: 5px; flex: 1;">
            <label for="address" class="c-grey" style="min-width: 80px;">Adresse:</label>
            <input type="text" id="address" name="address" value="<%= found.address %>" disabled style="flex: 1; padding: 5px; border: 1px solid #ccc; border-radius: 4px;" />
          </div>

          <div class="fs-14 d-flex align-center" style="gap: 5px; flex: 1;">
            <label for="dateNais" class="c-grey" style="min-width: 120px;">Date de naissance:</label>
            <input type="date" id="dateNais" name="dateNais" value="<%= new Date(found.dateNais).toISOString().split('T')[0] %>" disabled   style="flex: 1; padding: 5px; border: 1px solid #ccc; border-radius: 4px;" />
          </div>
        </div>

        <!-- Informations du Compte -->
        <div class="box p-20 d-flex align-center" style="gap: 15px; align-items: center; flex-wrap: wrap;">
          <h4 class="c-grey fs-15 m-0" style="flex-basis: 100%; margin-bottom: 10px;">Informations du Compte</h4>

          <div class="fs-14 d-flex align-center" style="gap: 5px; flex: 1;">
            <label for="emailCompte" class="c-grey" style="min-width: 80px;">Email:</label>
            <input type="email" id="emailCompte" name="emailCompte" value="<%= found.email %>" disabled style="flex: 1; padding: 5px; border: 1px solid #ccc; border-radius: 4px;" />
          </div>

          <div class="fs-14 d-flex align-center" style="gap: 5px; flex: 1;">
            <label for="motDePasse" class="c-grey" style="min-width: 120px;">Mot de Passe:</label>
            <input type="password" id="motDePasse" name="motDePasse" value="<%= found.motDePasse %>" disabled   style="flex: 1; padding: 5px; border: 1px solid #ccc; border-radius: 4px;" />
          </div>
        </div>

        <!-- Submit Button -->
        <div class="box p-20 d-flex align-center">
          <button type="button" class="btn btn-primary" id="updateButton">Mettre à jour</button>
          <button type="submit" class="btn btn-success" id="confirmButton" style="display: none;">Confirmer</button>

        </div>
        
      </form>
    </div>
  </div>
  <!-- End Overview -->
   
 
</div>
